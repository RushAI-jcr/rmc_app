# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rmc_triage

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (optional â€” defaults to REDIS_URL)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# JWT Configuration
# CRITICAL: Generate a strong random secret (at least 32 characters)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-strong-random-secret-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=480

# Azure Storage Configuration (for production file uploads)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=amcas-uploads

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=info
